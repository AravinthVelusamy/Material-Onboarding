<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.vexigon.libraries.onboarding.sample.MainActivity">

    <Button
        android:id="@+id/user_benefits_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/user_benefits" />

    <Button
        android:id="@+id/self_select_demo_bundled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/selfselect1" />

    <Button
        android:id="@+id/self_select_demo_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/selfselect2" />

    <Button
        android:id="@+id/self_select_demo_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/selfselect3" />

</LinearLayout>
