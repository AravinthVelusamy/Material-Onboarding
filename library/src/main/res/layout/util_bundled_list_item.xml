<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/bundledItemImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/list_cont_desc"
        android:padding="2dp"
        android:src="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bundledItemImage"
        android:layout_toRightOf="@+id/bundledItemImage"
        android:orientation="vertical"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/bundledItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="14"
            android:maxLines="1"
            android:text="@string/dummy" />

        <TextView
            android:id="@+id/bundledItemSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="14"
            android:maxLines="1"
            android:text="@string/dummy" />

    </LinearLayout>

    <Switch
        android:id="@+id/bundledItemToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textContainer"
        android:layout_toRightOf="@+id/textContainer" />

</RelativeLayout>